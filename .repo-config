{
    "lint": {
        "excludeDirs": ["Statio/App/Derived",
                       "bin",
                       "tools/repo/.build"],
        "swiftformat": {
            "enableRules": ["isEmpty"],
            "disableRules": ["blankLinesAtEndOfScope",
                             "blankLinesAtStartOfScope",
                             "redundantNilInit",
                             "unusedArguments",
                             "redundantParens",
                             "wrapMultilineStatementBraces",
                             "trailingCommas",
                             "braces"],
	        "swiftVersion": "5.4"
        },
        "swiftlint": {
            "disabledRules": ["line_length",
                              "nesting",
                              "function_body_length",
                              "identifier_name",
                              "redundant_optional_initialization",
                              "type_body_length",
                              "type_name",
                              "function_parameter_count",
                              "generic_type_name",
                              "unused_setter_value",
                              "trailing_whitespace",
                              "cyclomatic_complexity",
                              "file_length",
                              "todo",
                              "trailing_semicolons"],
            "optInRules": [],
            "warnings": [
                {
                    "name": "no_printing",
                    "regex": "(print[^\\)]*)",
                    "message": "Use apple unified logging instead of printing!"
                }
            ],
            "errors": []
        }
    },
    "mockolo": {
        "testableImports": ["ShortRibs",
                            "Statio",
                            "Analytics"],
        "destinations": ["Statio/App/StatioTests/Mocks.swift"]
    },
    "testConfig": {
        "device": "iPhone 8 Plus",
        "os": "14.5"
    },
    "vendorCodePath": "Statio/Vendor",
    "diCodePath": "Statio/App/Statio/Src/Features/",
    "diGraphPath": "Statio/App/Statio/Src/Infra/DependencyGraph.swift",
    "mockPath": "Statio/App/StatioTests/Mocks.swift",
    "featureCodePath": "Statio/App/Statio/Src",
    "libraryCodePath": "Statio/Libraries",
    "workspaceRoot": "Statio",
    "tuist": {
        "generationOptions": ["disableAutogeneratedSchemes",
                              "disableSynthesizedResourceAccessors"]
    }
}
